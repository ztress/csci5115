<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="235dp"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="170dp"
        android:text="Phone:          612-777-0018"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="200dp"
        android:text="Hours:           8am - 8pm"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="108dp"
        android:layout_height="106dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/church" />

    <TextView
        android:id="@+id/churchtitle"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="16dp"
        android:text="Lutheran \nChurch of Hope"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="241dp"
        android:layout_height="37dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="80dp"
        android:text="601 13th Ave. SE\nMinneapolis, MN, 55414"
        android:id="@+id/address" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="376dp"
        android:layout_height="37dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="130dp"
        android:text="Park in adjacent parking lot and proceed to the north door where you will find a line and greater"
        android:textSize="14sp" />

            <TextView
                android:id="@+id/churchClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="380dp"
                android:layout_marginTop="16dp"
                android:text="X"
                android:textColor="#FF3535" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>