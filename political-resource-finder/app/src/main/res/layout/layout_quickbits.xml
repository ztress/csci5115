<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/image"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_above="@id/Slogan"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dashboard_black_24dp" />

            <TextView
                android:id="@+id/QuickBits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/image"
                android:gravity="left"
                android:text="QUICK BITS INFO"
                android:textColor="#000"
                android:autoSizeMinTextSize="19dp"
                android:autoSizeMaxTextSize="22dp"/>

            <TextView
                android:layout_below="@id/QuickBits"
                android:id="@+id/nameqb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/image"
                android:gravity="left"
                android:text=""
                android:textColor="#000"
                android:autoSizeMinTextSize="19dp"
                android:autoSizeMaxTextSize="22dp"/>

            <TextView
                android:layout_below="@id/nameqb"
                android:id="@+id/Party"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/image"
                android:gravity="left"
                android:text=""
                android:textColor="#000"
                android:autoSizeMinTextSize="19dp"
                android:autoSizeMaxTextSize="22dp"/>
            <TextView
                android:layout_below="@id/Party"
                android:id="@+id/Website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:text="Click on a candidate to view:"
                android:textColor="#000"
                android:autoSizeMinTextSize="19dp"
                android:autoSizeMaxTextSize="22dp"/>
            <TextView
                android:layout_below="@id/Website"
                android:id="@+id/Slogan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:text="Some quick info about \n Party, Slogan, and where to go for more info about that candidate."
                android:textColor="#000"
                android:autoSizeMinTextSize="19dp"
                android:autoSizeMaxTextSize="22dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>